<!DOCTYPE html>
<html>
  <head>
    <title>RailsAuthorization</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% if user_signed_in? %>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to 'Rails 6', root_path, class: 'navbar-brand' %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Usuarios', users_index_path, method: :get, class: 'nav-link' %>
        </li>

        <li class="nav-item">
          <%= link_to 'Perfil', perfils_path, method: :get, class: 'nav-link' %>
        </li>

        <li class="nav-item">
          <%= link_to 'Perfil Usuario', perfil_usuarios_path, method: :get, class: 'nav-link' %>
        </li>

        <li class="nav-item">
          <%= link_to 'Produtos', produtos_path, method: :get, class: 'nav-link' %>
        </li>

<!--        <li class="nav-item">-->
          <%#= link_to 'Usuarios', perfil_index_path, method: :get, class: 'nav-link' %>
<!--        </li>-->
      </ul>
    </div>
  </nav>
  <% end %>

  <div class="container center-block">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </div>
  </body>
</html>
